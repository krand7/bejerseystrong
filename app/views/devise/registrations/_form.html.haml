= form_for resource, url: registration_path(resource), html: { class: 'form-horizontal' } do |f|
  - if resource.errors.any?
    #error_explanation.bs-callout.bs-callout-danger
      %h2
        = pluralize(resource.errors.count, "error")
        prohibited your account from being created:
      %ul
        - resource.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.label :first_name, class: 'control-label col-md-2'
    .col-md-10
      = f.text_field :first_name, class: 'form-control'
  .form-group
    = f.label :last_name, class: 'control-label col-md-2'
    .col-md-10
      = f.text_field :last_name, class: 'form-control'
  .form-group
    = f.label :school_id, class: 'control-label col-md-2'
    .col-md-10
      = f.select :school_id, [['---', nil]] + School.order(:name).pluck(:name, :id), {}, class: 'form-control'
  .form-group
    = f.label :graduation_year, class: 'control-label col-md-2'
    .col-md-10
      = f.number_field :graduation_year, class: 'form-control'
  .form-group
    = f.label :email, class: 'control-label col-md-2'
    .col-md-10
      = f.email_field :email, class: 'form-control'
  .form-group
    = f.label :password, class: 'control-label col-md-2'
    .col-md-10
      = f.password_field :password, autocomplete: 'off', class: 'form-control'
  .form-group
    .col-md-10.col-md-offset-2
      .checkbox
        %label
          = f.check_box :navigator_interest
          I am interested in becoming a navigator
  .form-group
    = f.submit 'Get Involved', class: 'btn btn-primary', id: 'subscribe'
