.content-header
  .container
    %h1 Listing Schools
    %p
      = link_to 'New School', new_school_path

.container
  %table.table.table-striped
    %thead
      %tr
        %th Name
        %th Volunteers
        %th Shifts
        %th Connections
        %th{:colspan => "3"}
    %tbody
      - @schools.each do |school|
        %tr
          %td= school.name
          %td= school.users.count
          %td= Appointment.current.where(id: school.users.pluck(:id)).count
          %td= Conversation.current.where(id: school.users.pluck(:id)).count
          %td= link_to 'Show', school
          %td= link_to 'Edit', edit_school_path(school)
          %td= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' }
