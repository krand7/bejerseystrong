#slide6.row.reset-layout
  #emailForm.col-md-5.col-md-offset-1
    #email-list-signup
      %h1.centered-text Stay Up-to-date
      %p.lead.centered-text Join our mailing list to hear the most exciting updates and news about our progress!
      %form{:method => "post"}
        .form-group
          %label{:for => "email"} Email Address:
          %input.form-control{:name => "email", :type => "email" }
        %input#submit.btn.btn-primary.btn-lg{:name => "submit", :type => "submit" }
    #social-links
      %h2.centered-text Also, be sure to follow us!
      %button.btn.btn-default.btn-lg{:style => "background-color:rgba(255,255,255,.1);", :type => "button"}
        = image_tag 'icons/appbar.social.facebook.heart.png'
      %button.btn.btn-default.btn-lg{:style => "background-color:rgba(255,255,255,.1);", :type => "button"}
        = image_tag 'icons/appbar.social.twitter.png'
      %button.btn.btn-default.btn-lg{:style => "background-color:rgba(255,255,255,.1);", :type => "button"}
        = image_tag 'icons/appbar.social.linkedin.png'
      %button.btn.btn-default.btn-lg{:style => "background-color:rgba(255,255,255,.1);", :type => "button"}
        = image_tag 'icons/appbar.social.vimeo.png'
  / END COL6
  #emailForm.col-md-5.col-md-offset-1
    %h1.centered-text Contact Us
    %p.lead.centered-text Please get in touch, we'll get back to you as soon as we can!
    %form{:method => "post"}
      .form-group
        %input.form-control{:name => "name", :placeholder => "Your Name", :type => "text"}
      .form-group
        %input.form-control{:name => "email", :placeholder => "Email", :type => "email" }
      .form-group
        %input.form-control{:name => "subject", :placeholder => "Subject", :type => "text" }
      .form-group
        %textarea.form-control{:name => "comment", :placeholder => "Text"}
      %input#submit.btn.btn-primary.btn-lg{:name => "submit", :type => "submit", :value => "Send"}