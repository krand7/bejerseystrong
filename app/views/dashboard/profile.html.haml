.content-header
  %h1 Your Profile

.container
  .content-container
    = form_for current_user, url: user_path(current_user), method: :patch, html: { class: 'form-horizontal' } do |f|
      - if current_user.errors.any?
        #error_explanation
          %h2
            = pluralize(current_user.errors.count, "error")
            prohibited this profile from being saved:
          %ul
            - current_user.errors.full_messages.each do |message|
              %li= message
      .form-group
        = f.label :first_name, class: 'control-label col-md-2'
        .col-md-10
          = f.text_field :first_name, class: 'form-control'
      .form-group
        = f.label :last_name, class: 'control-label col-md-2'
        .col-md-10
          = f.text_field :last_name, class: 'form-control'
      .form-group
        = f.label :email, class: 'control-label col-md-2'
        .col-md-10
          = f.text_field :email, class: 'form-control'
      .form-group
        = f.label :language_one, class: 'control-label col-md-2'
        .col-md-10
          = f.text_field :language_one, class: 'form-control'
      .form-group
        = f.label :language_two, class: 'control-label col-md-2'
        .col-md-10
          = f.text_field :language_two, class: 'form-control'
      .form-group
        = f.label :language_three, class: 'control-label col-md-2'
        .col-md-10
          = f.text_field :language_three, class: 'form-control'
      .form-group
        .col-md-10.col-md-offset-2
          = f.submit nil, class: 'btn btn-primary'
