= form_for @volunteer_resource, html: { class: 'form-horizontal' } do |f|
  - if @volunteer_resource.errors.any?
    #error_explanation
      %h2
        = pluralize(@volunteer_resource.errors.count, "error")
        prohibited this volunteer_resource from being saved:
      %ul
        - @volunteer_resource.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.label :title, nil, class: 'control-label col-md-2'
    .col-md-10
      = f.text_field :title, class: 'form-control'
  .form-group
    = f.label :description, nil, class: 'control-label col-md-2'
    .col-md-10
      = f.text_area :description, class: 'form-control'
  .form-group
    = f.label :file, nil, class: 'control-label col-md-2'
    .col-md-10
      = f.file_field :file
  .form-group
    .col-md-10.col-md-offset-2
      = f.submit nil, class: 'btn btn-primary'
